<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="450.0" prefWidth="600.0" spacing="25.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.skillswap.controllers.RegisterController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <Label text="Create Account" textFill="#27ae60">
        <font>
            <Font name="Arial Bold" size="36.0" />
        </font>
    </Label>

    <TextField fx:id="usernameField" promptText="Choose Username" style="-fx-pref-width: 350px; -fx-font-size: 18px;" />

    <PasswordField fx:id="passwordField" promptText="Choose Password" style="-fx-pref-width: 350px; -fx-font-size: 18px;" />

    <TextField fx:id="phoneField" promptText="Phone Number" style="-fx-pref-width: 350px; -fx-font-size: 18px;" />

    <Button onAction="#handleRegister" prefWidth="180.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-cursor: hand;" text="Register Now">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
    </Button>

    <Button onAction="#handleBack" style="-fx-background-color: transparent; -fx-text-fill: #7f8c8d; -fx-underline: true; -fx-cursor: hand;" text="Back to Login">
        <font>
            <Font size="16.0" />
        </font>
    </Button>

    <Label fx:id="statusLabel" textFill="red">
        <font>
            <Font size="16.0" />
        </font>
    </Label>
</VBox>